
<h1>Users list</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>
                <a href="{{ path('lracicot_fos_user_manager_show', { 'id': user.id }) }}" class="btn btn-default">show</a>
                <a href="{{ path('lracicot_fos_user_manager_edit', { 'id': user.id }) }}" class="btn btn-primary">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('lracicot_fos_user_manager_new') }}" class="btn btn-primary btn-lg">Create a new user</a>
